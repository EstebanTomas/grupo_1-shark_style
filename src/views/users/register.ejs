<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') -%>
        <link rel="stylesheet" href="/css/register.css">
        <title>Creá tu cuenta</title>
</head>

<body>
    <div>
        <%- include('../partials/header') -%>
    </div>
    <main class="elementContainerOfRegister">
        <div class="div-main">
            <form method="POST" action="/administration/register" id="form" class="formOfRegister"
                enctype="multipart/form-data">
                <!-- 
                <section class="section-logo">
                    <div>
                        <img src="/img/logo-shoes.svg" alt="logo" class="shark-logo">
                    </div>
                </section> -->
                <section class="section-form">
                    <img src="/img/logo-shoes.svg" width="40px" alt="logo" class="shark-logo">
                    <div class="conteinerOfAllTheElements">
                        <div class="title-form">
                            <h2>¡Crea tu cuenta!</h2>
                        </div>
                        <div class="data-field">
                            <label>Ingresa una imagen
                                <input type="file" name="avatar" id="avatar" class="file">
                            </label>
                        </div>
                        <h4 id="msg"></h4>
                        <div class="data-field">
                            <label class="nombre">Usuario:
                                <h5 class="name"></h5>
                                <input type="text" name="name" class="cam" id="name" placeholder="Nick">
                            </label>
                            <% if ( locals.errors && errors.name ) {%>
                                <p class="msg-error">
                                    <%= errors.name.msg %>
                                </p>
                                <% } %>
                        </div>
                        <div class="data-field">
                            <label class="nombre">Apellido
                                <h5 class="lastName"></h5>
                                <input type="text" name="lastName" id="lastName" class="cam" placeholder="Kennedy">
                            </label>
                            <% if ( locals.errors && errors.lastName ) {%>
                                <p class="msg-error">
                                    <%= errors.lastName.msg %>
                                </p>
                                <% } %>
                        </div>
                        <div class="data-field">
                            <label class="nombre">Email
                                <h5 class="email"></5>
                                    <input type="email" name="email" id="email" class="cam"
                                        placeholder="nickennedy@gmail.com.ar">
                            </label>
                            <% if ( locals.errors && errors.email ) {%>
                                <p class="msg-error">
                                    <%= errors.email.msg %>
                                </p>
                                <% } %>
                        </div>
                        <div class="data-field">
                            <label class="nombre">Contraseña
                                <h5 class="password"></h5>
                                <input type="password" name="password" id="password" class="cam"
                                    placeholder="aABj12ksjs2020">
                            </label>
                            <% if ( locals.errors && errors.password ) {%>
                                <p class="msg-error">
                                    <%= errors.password.msg %>
                                </p>
                                <% } %>
                        </div>
                        <div class="terminos">
                            <label>
                                <input type="radio">
                                Acepta nuestras condiciones de servicio y política de privacidad
                            </label>
                        </div>
                        <div class="conteiner-button">
                            <button type="submit" class="button">Crear cuenta</button>
                        </div>
                    </div>
                </section>
            </form>
        </div>
    </main>
    <div>
        <%- include('../partials/footer') %>
    </div>
    <script src="/js/register.js" text="text/javascript"></script>
</body>

</html>