<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') -%>
        <link rel="stylesheet" href="/css/productDetail.css">
        <title>Detalle del Producto</title>
</head>

<body>
    <div>
        <%- include('../partials/header') %>
    </div>

    <main>
        <section class="general-box">
            <!-- ****Fotos de respaldo a la izquierda**** -->
                <section class="picture">
                    <% for (let i = 0; i < product.images.length; i++) { %> 
                        <div class="photos">
                            <img class="pic" src="/img/productImage/<%= product.images[i].img %>" width="50px" 
                            height="55px" alt="imagenes del producto" />
                        </div>
                    <% } %> 
                </section>


                <div class="container">
                    <div class="principalPicture">
                        <!--aca va la foto principal-->
                        <img class="img-principalPicture" id="imagen-principal" src="/img/productImage/<%= product.images[0].img %>"
                            alt="imagen principal del producto" />
                    </div>
                </div>

                <div class="detail">
                    <article>
                        <div class="category">
                            <!-- Hombre/Mujer>
                        Categoría  -->
                            <%= product.gender %>
                                >
                                <%= product.category %>
                        </div>
                        <div class="name">
                            <!--nombre del producto-->
                            <%= product.name %>
                        </div>
                        <div class="description">
                            <%= product.description %>
                        </div>
                        <div class="price">
                            <!--precio-->
                            ARS $<%= product.price %>
                        </div>
                    </article>
                    <form action="/products/detail/<%= product.id %> " method="POST" enctype="multipart/form-data">
                        <article>
                            <div class="colorModel">
                                <!--colores y modelos disponibles-->
                                Colores disponibles
                            </div>

                            <!-- *** Una pequeña imagen del modelo de color (voy a probar con forma circular) *** -->
                            <div class="model">
                                <% for (let i = 0; i < product.colors.length; i++) { %> 
                                    <div>
                                        <input class="mod" type="radio" name="color" value="<%= product.colors[i].color %>"><%= product.colors[i].color %>
                                    </div>
                                <% } %> 
                            </div> 
                        </article>

                        <article>
                            <div class="measures">
                                <!--talles-->
                                Talles
                            </div>
                            <div class="size">
                                <% if (product.sizes[0].xs == true) { %> 
                                    <input type="radio" name="size" value="xs">
                                    <div id="xs" class="siz">XS</div>
                                <% } %> 
                                <% if (product.sizes[0].s == true) { %> 
                                    <input type="radio" name="size" value="s">
                                    <div id="s" class="siz">S</div>
                                <% } %> 
                                <% if (product.sizes[0].m == true) { %> 
                                    <input type="radio" name="size" value="m">
                                    <div id="m" class="siz">M</div>
                                <% } %> 
                                <% if (product.sizes[0].l == true) { %> 
                                    <input type="radio" name="size" value="l">
                                    <div id="l" class="siz">L</div>
                                <% } %> 
                                <% if (product.sizes[0].xl == true) { %> 
                                    <input type="radio" name="size" value="xl">
                                    <div id="xl" class="siz">XL</div>
                                <% } %> 
                            </div>
                        </article>
                        <article class="action">
                            <div class="saveCart">
                                <!--imagen del carrito-->
                                <i id="cart" class="fas fa-cart-plus"></i>
                                <!--agregar al carrito-->
                                <button type="submit" class="button-cart">Agregar al carrito</button>
                            </div>
                            <div class="follow">
                                <!--compartir-->
                                <i id="arrow" class="fas fa-share"></i>   
                            </div>
                        </article>
                    </form>
                </div>
        </section>
    </main>

    <div>
        <%- include ('../partials/footer') -%>
    </div>
    <script src="/js/productDetail.js" type="text/javascript"></script>
</body>

</html>